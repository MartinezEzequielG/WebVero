---
import FooterButton from '../components/FooterButton.astro';
import HomeIcon from './icons/HomeIcon.astro';
import AboutIcon from './icons/AboutIcon.astro';
import ContactIcon from './icons/ContactIcon.astro';
import InstagramIcon from './icons/InstagramIcon.astro';
import FacebookIcon from './icons/FacebookIcon.astro'
import ServicesIcon from './icons/ServicesIcon.astro';
import InstagramButton from './InstagramButton.astro';
---

<footer>
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse text-black">
                <div class="flex flex-col">
                    <span class="self-center text-3xl font-semibold whitespace-nowrap">Veronica Villalva</span>
                    <span class="text-sm text-black-800 dark:text-gray-400">M.P 718</span>
                    <span class="text-sm text-black-800 dark:text-gray-400">Formosa, Argentina</span>
                </div>
            </a>
            <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                <li class="mr-4 md:mr-6">
                    <FooterButton href="/" class="btn btn-primary text-sm">
                        <HomeIcon class="mr-2"/>
                        Home
                    </FooterButton>
                </li>
                <li class="mr-4 md:mr-6"> 
                    <FooterButton href="/about" class="btn btn-primary text-sm">
                        <AboutIcon class="mr-2"/>
                        Sobre MÃ­
                    </FooterButton>
                </li>
                <li class="mr-4 md:mr-6"> 
                    <FooterButton href="/contact" class="btn btn-primary text-sm">
                        <ContactIcon class="mr-2"/>
                        Contacto
                    </FooterButton>
                </li>
                <li class="mr-4 md:mr-6"> 
                    <FooterButton href="/services" class="btn btn-primary text-sm">
                        <ServicesIcon class="mr-2"/>
                        Servicios
                    </FooterButton>
                </li>
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <div class="flex items-center justify-center">
            <div class="ml-4">
                <ul class="flex">
                    <li class="mr-4 md:mr-6">
                        <InstagramButton href="https://www.instagram.com/lic.verovillalva/" class="btn btn-primary text-sm">
                            <InstagramIcon class="mr-2"/>
                            Instagram
                        </InstagramButton>
                    </li>
                    <li>
                        <FooterButton href="#" class="btn btn-primary text-sm">
                            <FacebookIcon class="mr-2"/>
                            Facebook
                        </FooterButton>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>

